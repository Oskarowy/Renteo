@model Renteo.Models.ExternalLoginConfirmationViewModel
@{
    ViewBag.Title = "Zarejestruj";
}
<h2>@ViewBag.Title.</h2>
<h3>Skojarz konto @ViewBag.LoginProvider.</h3>

@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <h4>Formularz skojarzenia</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <p class="text-info">
        Pomyślne uwierzytelnienie za pomocą konta <strong>@ViewBag.LoginProvider</strong>.
        Wprowadź poniżej nazwę użytkownika dla tej witryny i kliknij przycisk Zarejestruj, aby zakończyć
        logowanie.
    </p>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label" })
        <div class="col-md-12">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-4 control-label" })
        <div class="col-md-12">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DrivingLicense, new { @class = "col-md-4 control-label" })
        <div class="col-md-12">
            @Html.TextBoxFor(m => m.DrivingLicense, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Birthdate, new { @class = "col-md-4 control-label" })
        <div class="col-md-12">
            @Html.TextBoxFor(m => m.Birthdate, "{0:dd MM yyyy}", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MembershipTypeId, new { @class = "col-md-4 control-label" })
        <div class="col-md-12">
            @Html.DropDownListFor(m => m.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Wybierz rodzaj członkostwa", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Zarejestruj" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
