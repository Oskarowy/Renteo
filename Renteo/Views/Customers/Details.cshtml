@model Renteo.Models.Customer

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Klient: @Model.Name</h2>
<br />
<ul>
    <li>Typ abonamentu członkowskiego: @Model.MembershipType.Name</li>
    @if (Model.Birthdate.HasValue)
    {
     <li>Data urodzenia: @Model.Birthdate.Value.ToShortDateString()</li>
    }
    <li>Subskrypcja newslettera: @{ Model.IsSubscribedToNewsletter == true ? "TAK" : "NIE"}</li>
</ul>
