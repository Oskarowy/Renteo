@model Renteo.ViewModels.VehicleFormViewModel

@{
    var title = (Model.Vehicle == null) ? "New Vehicle" : "Edit Vehicle";
    ViewBag.Title = @title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@title</h2>

@using (@Html.BeginForm("Save", "Vehicles"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Vehicle.Make)
        @Html.TextBoxFor(m => m.Vehicle.Make, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Vehicle.Model)
        @Html.TextBoxFor(m => m.Vehicle.Model, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Vehicle.ProductionYear)
        @Html.TextBoxFor(m => m.Vehicle.ProductionYear, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Vehicle.VehicleTypeId)
        @Html.DropDownListFor(m => m.Vehicle.VehicleTypeId, new SelectList(Model.VehicleTypes, "Id", "BodyType"), "Select Vehicle Type", new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m => m.Vehicle.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}

